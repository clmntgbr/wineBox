<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <base href="/">
    <title>{% block title %}{% endblock %}</title>

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/semantic/semantic.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <script type="application/javascript" src="https://kit.fontawesome.com/cd91c1afff.js"></script>
    <script type="application/javascript" src="{{ asset('assets/js/modernizr.custom.js') }}"></script>

    {{ encore_entry_link_tags('app') }}

    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <nav id="menu">
        <ul id="gn-menu" class="gn-menu-main">
            <li class="gn-trigger">
                <a class="gn-icon gn-icon-menu"><span>Menu</span></a>
                <nav class="gn-menu-wrapper gn-open-part">
                    <div class="gn-scroller">
                        <ul class="gn-menu">
                            <li>
                                <a href="{{ path('wine_box_show') }}" class="icon appellation"><i class="fas fa-chess-board"></i>Wine Box</a>
                            </li>
                            <li><a href="{{ path('wine_bottle_create') }}" class="gn-icon gn-icon-cog">Wine Bottle</a></li>
                            <li><a class="gn-icon gn-icon-help">Help</a></li>
                            <li>
                                <a class="gn-icon gn-icon-archive">Archives</a>
                                <ul class="gn-submenu">
                                    <li><a class="gn-icon gn-icon-article">Articles</a></li>
                                    <li><a class="gn-icon gn-icon-pictures">Images</a></li>
                                    <li><a class="gn-icon gn-icon-videos">Videos</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /gn-scroller -->
                </nav>
            </li>
            <li><a href="http://tympanus.net/codrops"></a></li>
            <li><a class="codrops-icon codrops-icon-prev" href="http://tympanus.net/Development/HeaderEffects/"><span>Previous Demo</span></a></li>
            <li>
                {% if app.user %}
                        <div class="ui inline dropdown user">
                            <div class="text">
                                <img class="ui avatar image" src="https://semantic-ui.com/images/avatar/small/jenny.jpg">
                            </div>
                            <div class="menu">
                                <a class="item">
                                    Jenny Hess
                                </a>
                                <a class="item">
                                    Elliot Fu
                                </a>
                                <a class="item">
                                    Stevie Feliciano
                                </a>
                                <a class="item">
                                    Christian
                                </a>
                                <a class="item">
                                    Matt
                                </a>
                                <a class="item">
                                    Justen Kitsune
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="ui animated fade button" tabindex="0">
                            <div class="visible content">Sign-up for a Pro account</div>
                            <div class="hidden content">
                                $12.99 a month
                            </div>
                        </div>
                    {% endif %}
            </li>
        </ul>
    </nav>

    <section id="{{ app.request.attributes.get("_route") }}" class="content">
        {% block body %}
        {% endblock %}
    </section>

<script type="application/javascript" src="https://kit.fontawesome.com/cd91c1afff.js"></script>
<script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.js"></script>
<script type="application/javascript" src="{{ asset('assets/semantic/semantic.min.js') }}"></script>
<script type="application/javascript" src="{{ asset('assets/js/classie.js') }}"></script>
<script type="application/javascript" src="{{ asset('assets/js/gnmenu.js') }}"></script>

<script>
    new gnMenu(document.getElementById('gn-menu'));
    $('.ui.dropdown.user').dropdown({
        action: 'select',
        onChange: function (value) {

        }
    })
</script>

{% block javascripts %}
{% endblock %}

</body>
</html>
